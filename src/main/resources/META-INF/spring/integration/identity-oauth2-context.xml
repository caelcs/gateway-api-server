<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:int="http://www.springframework.org/schema/integration"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/integration http://www.springframework.org/schema/integration/spring-integration.xsd">

    <int:channel id="requestTokenChannel"/>

    <int:router input-channel="inChannel" expression="@securityService.isTokenPresent()">
        <int:mapping value="true" channel="requestCachedTokenChannel"/>
        <int:mapping value="false" channel="requestNewTokenChannel"/>
    </int:router>

    <int:channel id="requestCachedTokenChannel"/>
    <int:service-activator input-channel="requestTokenChannel" expression="@securityService.getCurrentToken()" output-channel="responseTokenChannel" />

    <int:channel id="requestNewTokenChannel"/>
    <int:chain input-channel="requestNewTokenChannel" output-channel="responseTokenChannel">
        <int:service-activator expression="@securityService.getAuthorizationCode()"/>
        <int:service-activator expression="@securityService.generateToken(payload)"/>
    </int:chain>

    <int:channel id="responseTokenChannel"/>

</beans>