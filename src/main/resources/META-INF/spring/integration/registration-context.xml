<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:int="http://www.springframework.org/schema/integration"
       xmlns:int-http="http://www.springframework.org/schema/integration/http"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/integration http://www.springframework.org/schema/integration/spring-integration.xsd
		http://www.springframework.org/schema/integration/http http://www.springframework.org/schema/integration/http/spring-integration-http.xsd">

    <int:gateway id="registrationService"
                 service-interface="uk.co.caeldev.gateway.api.features.registration.RegistrationService"
                 default-request-channel="registrationChannel"/>

    <int:channel id="registrationChannel"/>

    <int-http:outbound-gateway request-channel="registrationChannel"
                               url="http://localhost:8080/http/receiveGateway"
                               http-method="POST"
                               expected-response-type="java.lang.String"/>

</beans>